#!/usr/bin/env bash

# $PATH is left-associative; utilities sourced first take precedence.
#
# e.g. here we force Brew-installed `curl` to override the system `curl`
# but we don't allow non-prefixed GNU Coreutils to override default 
# system utilities.

if [[ "$(uname -s)" == "Darwin" ]]; then
    export PATH="/usr/local/bin:/usr/local/opt/llvm/bin:/usr/local/opt/curl/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/usr/local/opt/coreutils/libexec/gnubin:/usr/local/texlive/2019basic/bin/x86_64-darwin"
elif [[ "$(uname -s)" == "Linux" ]]; then
    export PATH="/home/linuxbrew/.linuxbrew/bin:$PATH"
fi
